---
interface Props {
title: string;
subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<section class="flex place-content-center flex-col text-center  bg-violet-900 rounded-3xl h-36 w-80 md:w-48 lg:h-36 lg:w-64 xl:h-40 xl:w-96 2xl:h-52 ">
  <h1 class="text-2xl mb-2 font-bold">
    {title}
  </h1>
  <div class="font-thin">
    {subtitle}
  </div>
  </section>