---
interface Props {
titleTuto: string;
}
const {titleTuto} = Astro.props;
---
<head>
  <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Lilita+One&display=swap" rel="stylesheet">
</head>
  <button class="ButtonTuto h-[2.5rem] w-[3rem] rounded-2xl bg-gradient-to-r from-cyan-500 to-indigo-500">
          <a href="#UrlAqui" class="box">{titleTuto}</a>
        </button>
  
  <style>
  :root {
  --bgt: #040811;
}
.box{
  background: var(--bg);
  padding: 0.3rem 1rem;
  border-radius: 1rem;
  place-content: center;
  font-family: "Lilita One", sans-serif;
  font-weight: 300;
  font-style: normal;
}
  .ButtonTuto{
    height: 2.3rem;
  width: 7.7rem;
  border-radius: 1rem;
  background: linear-gradient(#599eea,#21499d);
  }
  .box:hover{
  background: none;
}
@media(min-width: 1024px){
  .box{
    padding: 0.3rem 3.7rem;
  }
  .ButtonTuto{
    width: 13rem;
  }
}
@media(min-width: 1536px ){
  .box{
    padding: 0.6rem 2.8rem;
    font-size: 40px;
  }
  .ButtonTuto{
    height: 4.5rem;
    width: 17rem;
  }
}
  </style>