---
import Layout from '../layouts/Layout.astro';
import Hero from '../section/HomePage/HeroPage.astro';
import Category from '../section/Category/category.astro';
---

<Layout title="HomePage">
	<main >
	  <Hero /> <!-- Contiene la section Hero -->
	  <h1 class="grid mb-5 place-content-center md:block md:ml-6">
	    Category
	  </h1>
	  <Category />
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem 1rem;
		/*max-width: calc(100% - 2rem);*/
		color: white;
		font-size: 20px;
		line-height: 1.6;
		
	}
	@media(min-width: 768px){
	  main{
	    padding: 1rem 0.5rem;
	    margin: 0;
	  }
	}
</style>
